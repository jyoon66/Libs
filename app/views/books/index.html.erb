<div class="slogan">
  <h1>Books that will change your life:</h1>
</div>

<br />

<% @books.each do |book| %>
  <div class="booyah-box col-10 offset-1">
    <h1><%= link_to book.title, book_path(book) %></h1>
    <i>by <%= book.author %></i><br /><br />
    <p><%= book.description %></p><br />
    
    <% if book.user.present? %>
      <small><%= book.user.email %></small>
    <% end %>
  </div>
<% end %>
