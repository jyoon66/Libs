<div class="booyah-box col-10 offset-1">
  <h1>Edit This Book Description</h1>
  </br>
  <%= simple_form_for @book do |f| %>
    <%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :description %>
    <%= f.input :image %>
    <br />
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  <% end %>
</div>
